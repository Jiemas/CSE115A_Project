{
  "name": "cse115a-rapidreview-backend",
  "version": "1.0.0",
  "description": "CSE115A Rapid Review Project - Backend",
  "author": "The Jetskiz",
  "license": "UNLICENSED",
  "repository": "none",
  "devDependencies": {
    "eslint": "8.57.0",
    "eslint-config-google": "*",
    "jest": "*",
    "nodemon": "*",
    "supertest": "*"
  },
  "dependencies": {
    "bcrypt": "*",
    "bcryptjs": "^2.4.3",
    "body-parser": "*",
    "bull": "*",
    "cors": "^2.8.5",
    "dotenv": "*",
    "express": "*",
    "express-openapi-validator": "*",
    "js-yaml": "*",
    "jsonwebtoken": "*",
    "openai": "*",
    "pm2": "^5.4.2",
    "redis": "^4.7.0",
    "swagger-ui-express": "*"
  },
  "jest": {
    "testTimeout": 60000,
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 15
    },
    "rules": {
      "indent": [
        "warn",
        2
      ]
    },
    "ignorePatterns": [
      "coverage/**"
    ]
  },
  "scripts": {
    "dep_start": "nodemon src/server.js",
    "start": "nodemon src/server.js",
    "test": "jest --testTimeout=10000 --runInBand --coverage --verbose --forceExit --detectOpenHandles",
    "lint": "eslint . --no-inline-config --max-warnings 0"
  }
}