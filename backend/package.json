{
  "name": "cse115a-rapidreview-backend",
  "version": "1.0.0",
  "description": "CSE115A Rapid Review Project - Backend",
  "author": "Jiemas Rubio <jsrubio@ucsc.edu>",
  "license": "UNLICENSED",
  "repository": "none",
  "devDependencies": {
    "jest": "*",
    "nodemon": "*",
    "supertest": "*"
  },
  "dependencies": {
    "body-parser": "*",
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "express-openapi-validator": "*",
    "express-session": "*",
    "js-yaml": "*",
    "jsonwebtoken": "*",
    "pg": "*",
    "swagger-ui-express": "*"
  },
  "jest": {
    "testTimeout": 60000,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/server.js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "scripts": {
    "start": "nodemon src/app.js",
    "test": "jest --testTimeout=10000 --runInBand --coverage --verbose --forceExit --detectOpenHandles"
  }
}

